<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/curiosityFragment">

    <fragment
        android:id="@+id/curiosityFragment"
        android:name="com.example.nasaassignment.ui.rovers.curiosity.CuriosityFragment"
        android:label="CuriosityFragment" >
        <action
            android:id="@+id/action_curiosityFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/opportunityFragment"
        android:name="com.example.nasaassignment.ui.rovers.opportunity.OpportunityFragment"
        android:label="fragment_opportunity"
        tools:layout="@layout/fragment_opportunity" >
        <action
            android:id="@+id/action_opportunityFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/spiritFragment"
        android:name="com.example.nasaassignment.ui.rovers.spirit.SpiritFragment"
        android:label="fragment_spirit"
        tools:layout="@layout/fragment_spirit" >
        <action
            android:id="@+id/action_spiritFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.example.nasaassignment.ui.photodetails.PhotoDetailsFragment"
        android:label="fragment_photo_details"
        tools:layout="@layout/fragment_photo_details" />
</navigation>